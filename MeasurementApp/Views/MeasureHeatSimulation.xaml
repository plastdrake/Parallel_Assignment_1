<UserControl x:Class="MeasurementApp.Views.MeasureHeatSimulation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeasurementApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <DataGrid x:Name="AvailableHeatSimulationAlgorithms"
                  ItemsSource="{Binding AvailableAlgorithms}"
                  SelectionMode="Extended"
                  AutoGenerateColumns="false"
                  HorizontalAlignment="Left" Margin="10,10,0,10" VerticalAlignment="Stretch"
                  Width="250"
                  IsEnabled="{Binding RunIsEnabled}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Algorithm" Binding="{Binding Algorithm.Name}" MinWidth="100" Width="*" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Header="Run?" Binding="{Binding Run}" MinWidth="10" Width="40"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top">
                <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal" Margin="0" VerticalAlignment="Top">
                        <Label Content="Square size:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="SquareSize" Text="{Binding SquareSize}" IsEnabled="{Binding RunIsEnabled}" HorizontalAlignment="Right" Height="23" Margin="10,10,10,10" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0" VerticalAlignment="Top">
                        <Label Content="Maximum time step:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="MaximumTimeStep" Text="{Binding MaximumTimeStep}" IsEnabled="{Binding RunIsEnabled}" HorizontalAlignment="Right" Height="23" Margin="10,10,10,10" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
                    </StackPanel>
                </StackPanel>
                <Image Height="250" Width="250" Source="{Binding HeatImage}"/>
            </StackPanel>
            <Button Command="{Binding RunCommand}" IsEnabled="{Binding RunIsEnabled}" Content="Start" Width="75"/>
            <ScrollViewer Height="200" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalScrollBarVisibility="Visible" IsEnabled="True">
                <TextBox x:Name="ResultLog" Text="{Binding ResultLog}" IsReadOnly="True" UndoLimit="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="600" MinHeight="1000"/>
            </ScrollViewer>
        </StackPanel>
    </StackPanel>
</UserControl>
