<UserControl x:Class="MeasurementApp.Views.MeasureEditDistance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeasurementApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <DataGrid x:Name="AvailableEditDistanceAlgorithms"
                  ItemsSource="{Binding AvailableAlgorithms}"
                  SelectionMode="Extended"
                  AutoGenerateColumns="false"
                  HorizontalAlignment="Left" Margin="10,10,0,10" VerticalAlignment="Stretch"
                  Width="250"
                  IsEnabled="{Binding RunIsEnabled}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Algorithm" Binding="{Binding Algorithm.Name}" MinWidth="100" Width="*" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Header="Run?" Binding="{Binding Run}" MinWidth="10" Width="40"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel Orientation="Vertical" Margin="10,10,10,10" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" Margin="10,10,10,10" VerticalAlignment="Top">
                    <Label Content="Length of string 1:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="LengthOfString1" Text="{Binding LengthOfString1}" IsEnabled="{Binding RunIsEnabled}" HorizontalAlignment="Right" Height="23" Margin="10,10,10,10" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
                    <Button x:Name="RandomizeString1" Command="{Binding RandomizeString1Command}" IsEnabled="{Binding RunIsEnabled}">
                        <Label Content="Randomize string 1" />
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,10,10,10" VerticalAlignment="Top">
                    <Label Content="String 1:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="String1" Text="{Binding String1}" IsEnabled="{Binding RunIsEnabled}" HorizontalAlignment="Right" Height="23" Margin="10,10,10,10" TextWrapping="Wrap" VerticalAlignment="Top" Width="400"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,10,10,10" VerticalAlignment="Top">
                    <Label Content="Length of string 2:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="LengthOfString2" Text="{Binding LengthOfString2}" IsEnabled="{Binding RunIsEnabled}" HorizontalAlignment="Right" Height="23" Margin="10,10,10,10" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
                    <Button x:Name="RandomizeString2" Command="{Binding RandomizeString2Command}" IsEnabled="{Binding RunIsEnabled}">
                        <Label Content="Randomize string 2" />
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,10,10,10" VerticalAlignment="Top">
                    <Label Content="String 2:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="String2" Text="{Binding String2}" IsEnabled="{Binding RunIsEnabled}" HorizontalAlignment="Right" Height="23" Margin="10,10,10,10" TextWrapping="Wrap" VerticalAlignment="Top" Width="400"/>
                </StackPanel>
            </StackPanel>
            <Button Command="{Binding RunCommand}" IsEnabled="{Binding RunIsEnabled}" Content="Start" Width="75"/>
            <ScrollViewer Height="310" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalScrollBarVisibility="Visible" IsEnabled="True">
                <TextBox x:Name="ResultLog" Text="{Binding ResultLog}" IsReadOnly="True" UndoLimit="0" MinHeight="400" Width="600" VerticalAlignment="Top"/>
            </ScrollViewer>
        </StackPanel>
    </StackPanel>
</UserControl>
